<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundColor"
    tools:context=".Activity.AddExpenseActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/NoActionBarColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="25dp"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tripBudgetTV"
            android:layout_weight=".5"
            android:textSize="18sp"
            android:hint="Budget:"
            android:background="@color/White"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tripCurrentExpenseTV"
            android:layout_weight=".5"
            android:hint="Expense:"
            android:background="@color/White"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="Expense Title"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/addExpenseTitleET"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/rounded_edit_text"
        android:padding="10dp"
        android:hint="Add Expense Title"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    //-------------------------------------------
    <TextView
        android:text="Expense Amount"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addExpenseAmountET"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="number"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:background="@drawable/rounded_edit_text"
        android:padding="10dp"
        android:hint="Add Expense Amount"
        android:drawableLeft="@drawable/ic_taka"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addExpenseBtn"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:text="Add Expense"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:background="@drawable/rounded_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

</LinearLayout>